import os

LIB_DIR=os.environ['LIB_DIR'];
BIN_DIR=os.environ['BIN_DIR'];

sources= Glob('mvvm/base/*.c') + \
  Glob('mvvm/hardware/*.c') +  \
  Glob('mvvm/awtk/*.c') + \
  Glob('mvvm/cpp/*.cpp') + \
  Glob('mvvm/*.c')

if 'WITH_JS' in os.environ:
  sources += Glob('mvvm/jerryscript/*.c') 

env=DefaultEnvironment().Clone()

if 'WITH_AWTK_SO' in os.environ:
  print("with awtk so");
  env.SharedLibrary(os.path.join(BIN_DIR, 'mvvm'), sources)
else:
  env.Library(os.path.join(LIB_DIR, 'mvvm'), sources)

